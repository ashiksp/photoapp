<%= form_for( @comment, :html => { :multipart => true } ) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="field">
	<%= f.label :content %>
	<%= f.text_area :content, placeholder: "Type your comment here..." %>
</div>
	<%= f.submit "Add comment", class: "btn btn-lg btn-primary" %>
<% end %>